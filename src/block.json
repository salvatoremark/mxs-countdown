{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "msalv/mxs-countdown",
  "version": "0.1.0",
  "title": "MXS Countdown",
  "category": "widgets",
  "icon": "superhero",
  "description": "A new block created by the create-block tool using a custom external project template.",
  "example": {
    "attributes": {
      "textInput": "Example text input",
      "fontSize": 8
    }
  },
  "attributes": {
    "countdownDate": {
      "type": "string",
      "default": "01/01/2025"
    },
    "countdownHeading": {
      "type": "string",
      "default": "Countdown to the New Year"
    },
    "countdownHeadingLevel": {
      "type": "integer",
      "default": 6
    },
    "countdownHeadingFontSize": {
      "type": "string",
      "default": "2"
    },
    "countdownFontSize": {
      "type": "string",
      "default": "1"
    },
    "countdownMessage": {
      "type": "string",
      "default": "Happy New Year!"
    },
    "countdownUnits": {
      "type": "array",
      "default": "[d,h,m,s]"
    },
    "countdownUnitsDelimeter": {
      "type": "string",
      "default": ":"
    },
    "style": {
      "type": "object",
      "padding": {
        "top": "1em",
        "right": "1em",
        "bottom": "1em",
        "left": "1em"
      },
      "default": {
        "color": {
          "background": "#F9F9F9"
        }
      }
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "boxWidth": {
      "type": "integer",
      "default": 30
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "color": {
      "background": true,
      "text": true,
      "heading": true
    },
    "spacing": {
      "padding": true,
      "margin": false
    }
  },
  "textdomain": "mxs-countdown",
  "viewScript": "file:./view.js",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}