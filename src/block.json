{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "msalv/mxs-countdown",
  "version": "0.1.0",
  "title": "MXS Countdown",
  "category": "widgets",
  "icon": "clock",
  "description": "A new block created by the create-block tool using a custom external project template.",
  "example": {
    "attributes": {
      "countdownDate": "01/01/2025",
      "countdownHeading": "Countdown to New Year",
      "countdownHeadingLevel": 6,
      "countdownHeadingFontSize": "2",
      "countdownFontSize": "1.2",
      "countdownMessage": "Happy New Year 2025!",
      "countdownUnits": "[d,h,m,s]",
      "countdownUnitsDelimeter": ":",
      "textAlign": "center",
      "boxWidth": 80
    }
  },
  "attributes": {
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#fff",
          "text": "#666"
        }
      }
    },
    "countdownDate": {
      "type": "string",
      "default": "01/01/2025"
    },
    "countdownHeading": {
      "type": "string",
      "default": "Countdown to the New Year"
    },
    "countdownHeadingLevel": {
      "type": "integer",
      "default": 6
    },
    "countdownHeadingFontSize": {
      "type": "string",
      "default": "1.32"
    },
    "countdownFontSize": {
      "type": "string",
      "default": ".8"
    },
    "countdownMessage": {
      "type": "string",
      "default": "Happy New Year 2025!"
    },
    "countdownUnits": {
      "type": "array",
      "default": "[d,h,m,s]"
    },
    "countdownUnitsDelimeter": {
      "type": "string",
      "default": ":"
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "boxWidth": {
      "type": "integer",
      "default": 22
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "color": {
      "heading": true,
      "text": true,
      "background": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "textdomain": "mxs-countdown",
  "viewScript": "file:./view.js",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}